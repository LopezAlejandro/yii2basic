<?php

use yii\helpers\Html;
use kartik\widgets\ActiveForm;
use kartik\builder\Form;
use kartik\datecontrol\DateControl;
use kartik\select2\Select2;
use yii\helpers\ArrayHelper;
use app\models\Autor;
use app\models\TipoLibro;
/**
 * @var yii\web\View $this
 * @var app\models\Libros $model
 * @var yii\widgets\ActiveForm $form
 */
?>

<div class="libros-form">
<?php
    $form = ActiveForm::begin(['type' => ActiveForm::TYPE_HORIZONTAL]); 
    
	 echo Form::widget([
	 		'model' => $model,
	 		'form' => $form,
	 		'attributes' => [
	 								'titulo' => ['type'=>Form::INPUT_TEXT,'options'=>['placeholder'=>'Titulo del libro...']],
	 								'autor_ids' => [
	 													'type' => Form::INPUT_WIDGET,
	 													'widgetClass' => '\kartik\widgets\Select2',
	 													'options'=> [
	 																	'data' => ArrayHelper::map(Autor::find()->all(),'nombre','nombre'),
	 																	],
	 													'pluginOptions' => ['allowClear'=>true,'multiple' => true],				
	 								]
	 		]
	 ]);
	 
	 echo Form::widget([   
    							'model'=>$model,
    							'form'=>$form,
    							'columns'=>2,
    							'attributes'=>[
    												'nro_libro'=>['type'=>Form::INPUT_TEXT,'options'=>['placeholder'=>'Libro Nro...']],
    												'ano'=>['type'=>Form::INPUT_TEXT,'options'=>['placeholder'=>'AÃ±o de Publicacion...']],	
    						    ]
   ]);
   
   echo Form::widget([
	 		'model' => $model,
	 		'form' => $form,
	 		'attributes' => [
	 								'tipo_libro_id' => [
	 													'type' => Form::INPUT_WIDGET,
	 													'widgetClass' => '\kartik\widgets\Select2',
	 													'options'=> [
	 																	'data' => ArrayHelper::map(TipoLibro::find()->all(),'tipo_tipo_libro_id','descripcion'),
	 																	],
	 													'pluginOptions' => ['allowClear'=>true],				
	 								]
	 		]
	]);
	 
	 echo Form::widget([     
    							'model'=>$model,
    							'form'=>$form,
    							'columns'=>2,
    							'attributes'=>[
    												'editorial'=>['type'=>Form::INPUT_TEXT,'options'=>['placeholder'=>'Editorial...']],
    												'edicion'=>['type'=>Form::INPUT_TEXT,'options'=>['placeholder'=>'Nro de Edicion...']],	
    						    ]
   ]);
            

?>



    <?= Html::submitButton($model->isNewRecord ? Yii::t('app', 'Create') : Yii::t('app', 'Update'),
        ['class' => $model->isNewRecord ? 'btn btn-success' : 'btn btn-primary'] 
    ) ?>
<?php  ActiveForm::end(); ?>

</div>
